extends layout

block content
  h1 #{__("app_name")}

  div.col-lg-6
    p.fs-5 #{__("homepage_welcome")}

    if userPermissions.read_public
      a(href=`/doc/list`, role="button").btn.btn-secondary.me-2
        i.bi.bi-list-ul.me-2
        | #{__("list_docs")}

    if userPermissions.write
      a(href=`/doc/add`, role="button").btn.btn-primary
        i.bi.bi-plus.me-2
        | #{__("add_doc")}
