extends ../layout

block content
  .container
    .row
      .col-md-8.offset-md-2
        .card.mt-5
          .card-header.bg-danger.text-white
            h3.card-title.text-center #{__("delete_workspace_no")} #{workspace._id}?
          .card-body
            include workspace.pug
          .card-footer.text-center
            form(action=`/workspace/delete/${workspace._id}`, method='POST')
              a.btn.btn-primary.col-md-2(href="/workspace/list") #{__("cancel_button")}
              button.btn.btn-danger.col-md-2.offset-md-8(type='submit') #{__("delete_button")}

